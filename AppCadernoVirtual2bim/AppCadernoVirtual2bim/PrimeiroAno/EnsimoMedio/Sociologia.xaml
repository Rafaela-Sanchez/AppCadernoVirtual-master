<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCadernoVirtual2bim.PrimeiroAno.EnsimoMedio.Sociologia"
             Title="Sociologia"
             BackgroundColor="#FFEDF8">


    <StackLayout>
        
        <!--Criação de uma Grid para inserir os botões e elementos utilizados nesta página de conteúdo-->

        <Grid RowSpacing="20" ColumnSpacing="20" Padding="100">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>

            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

        </Grid>

        <!--Botão com uso de um estilo (BotaoAnos) e criação de uma ação atrelada à ele 
        (Navegação entre telas definida no código por trás (Sociologia.xaml.cs) -->
        
        <Button x:Name="Filosofia2"
                Grid.Column="1"
                Grid.Row="0"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Text="Segundo Ano"
                Style="{StaticResource BotaoAnos}"
                CornerRadius="10"
                Clicked="Filosofia2_Clicked">
        </Button>

        <Button x:Name="Filosofia3"
                Grid.Column="1"
                Grid.Row="0"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Text="Terceiro Ano"
                Style="{StaticResource BotaoAnos}"
                CornerRadius="10"
                Clicked="Filosofia3_Clicked">
        </Button>

    </StackLayout>
</ContentPage>